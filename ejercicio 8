#include <iostream>
#include <vector>
#include <cmath>   
using namespace std;

int main() {
    int n;
    cout << "Ingrese la cantidad de elementos del vector: ";
    cin >> n;

    vector<double> A(n);

    for (int i = 0; i < n; i++) {
        cout << "A[" << i << "] = ";
        cin >> A[i];
    }

    double mayorDif = 0;

    for (int i = 0; i < n - 1; i++) {
        double dif = abs(A[i+1] - A[i]);
        if (dif > mayorDif)
            mayorDif = dif;
    }

    cout << "\nLa mayor diferencia entre elementos consecutivos es: "
         << mayorDif << endl;

    return 0;
}

