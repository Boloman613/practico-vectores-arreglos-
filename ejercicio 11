#include <iostream>
#include <vector>
using namespace std;

int main() {
    int n;
    cout << "Ingrese la cantidad de elementos del vector: ";
    cin >> n;

    vector<int> v(n);

    for (int i = 0; i < n; i++) {
        cout << "Elemento " << i + 1 << ": ";
        cin >> v[i];
    }

    int positivos = 0, negativos = 0, ceros = 0;

    for (int x : v) {
        if (x > 0)
            positivos++;
        else if (x < 0)
            negativos++;
        else
            ceros++;
    }
