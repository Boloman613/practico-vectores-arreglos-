#include <iostream>
#include <vector>
using namespace std;

int main() {
    int n;
    cout << "Ingrese la cantidad de elementos del vector: ";
    cin >> n;

    vector<int> original(n);

    for (int i = 0; i < n; i++) {
        cout << "original[" << i << "] = ";
        cin >> original[i];
    }

    vector<int> invertido(n);

    for (int i = 0; i < n; i++) {
        invertido[i] = original[n - 1 - i];
    }

    cout << "\nVector original:\n";
    for (int x : original) cout << x << " ";
    cout << "\nVector invertido:\n";
    for (int x : invertido) cout << x << " ";
    cout << endl;

    return 0;
}
